<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and Registration</title>
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="max-w-md w-full p-6 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-6 text-center">Login</h2>
        <form action="/login" method="post" id="loginForm" class="space-y-4">
            <div>
                <label for="usernameL" class="block mb-1">Username</label>
                <input type="text" id="username" name="usernameL" class="w-full border-gray-300 rounded-md" value="<%=(locals.old_data) ? old_data.usernameL : '' %>">
            </div>
            <div>
                <label for="passwordL" class="block mb-1">Password</label>
                <input type="password" id="password" name="passwordL" class="w-full border-gray-300 rounded-md" value="<%=(locals.old_data) ? old_data.passwordL : '' %>">
            </div>
            <% if (locals.login_errors){ login_errors.forEach(function(error_msg) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <%= error_msg %>
                </div>
                <% }) } %>
            <button type="submit"
                class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition-colors duration-300">Login</button>
        </form>
        <hr class="my-6">
        <h2 class="text-2xl font-semibold mb-6 text-center">Register</h2>
        <form action="/register" method="post" novalidate id="registerForm" class="space-y-4">
            <div>
                <label for="regUsername" class="block mb-1">Username</label>
                <input type="text" id="regUsername" name="regUsername" value="<%=(locals.old_data) ? old_data.regUsername : '' %>" class="w-full border-gray-300 rounded-md">
            </div>
            <div>
                <label for="regPassword" class="block mb-1">Password</label>
                <input type="password" id="regPassword" name="regPassword" value="<%=(locals.old_data) ? old_data.regPassword : '' %>" class="w-full border-gray-300 rounded-md">
            </div>
            <% if (locals.register_error){
                register_error.forEach(function(error_msg) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert"><%= error_msg %></div>
                <% })
            } %>
            <button type="submit"
                class="w-full bg-green-500 text-white py-2 rounded-md hover:bg-green-600 transition-colors duration-300">Register</button>
        </form>
    </div>
</body>

</html>